@model IEnumerable<EduHub.Models.Resource>

@{
    ViewData["Title"] = "Resources";
}

<h1>Resources</h1>



<form asp-controller="Resource" asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group mx-sm-3 mb-2">
        <input type="text" name="searchString" class="form-control" placeholder="Search">
    </div>
    <button type="submit" class="btn btn-primary mb-2">Search</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.UploaderName)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UploaderName)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a href="@item.FilePath" class="btn btn-link" download>Download</a>
                </td>
                <td>
                    @if (item.UploaderName == User.Identity.Name)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
