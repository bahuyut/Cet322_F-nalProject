@model List<EduHub.Models.EduUser>

@{
    ViewData["Title"] = "Grade Students";
}

<h2>Grade Students</h2>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.Name</td>
                        <td>
                            <a asp-action="Grade" asp-route-studentId="@student.Id" class="btn btn-sm btn-primary">Grade</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
