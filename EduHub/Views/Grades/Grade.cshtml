@model List<EduHub.Models.GradeViewModel>

@{
    ViewData["Title"] = "Grade Assignments";
}

<h2>Grade Assignments</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Grade">
            <input type="hidden" name="studentId" value="@ViewBag.StudentId" />
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Assignment</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model[i].Assignment.Title
                                <input type="hidden" name="grades[@i].AssignmentId" value="@Model[i].Assignment.Id" />
                            </td>
                            <td>
                                <input type="number" name="grades[@i].Score" step="0.01" class="form-control" required />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
