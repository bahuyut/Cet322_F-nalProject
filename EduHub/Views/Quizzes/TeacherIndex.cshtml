@model IEnumerable<EduHub.Models.Quiz>

@{
    ViewData["Title"] = "Quizzes";
}

<h2>Quizzes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Quiz</a>
</p>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
