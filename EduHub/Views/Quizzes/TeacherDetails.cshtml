@model EduHub.Models.Quiz

@{
    ViewData["Title"] = "Quiz Details";
}

<h2>@Model.Title</h2>

<h3>Questions</h3>
@foreach (var question in Model.Questions)
{
    <div>
        <strong>@question.Text</strong>
        <br />
        <label>Option A:</label> @question.OptionA <br />
        <label>Option B:</label> @question.OptionB <br />
        <label>Option C:</label> @question.OptionC <br />
        <label>Option D:</label> @question.OptionD <br />
        <label>Correct Option:</label> @question.CorrectOption <br />
    </div>
}

<h3>Students' Scores</h3>
@if (Model.StudentQuizzes != null && Model.StudentQuizzes.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var studentQuiz in Model.StudentQuizzes)
            {
                <tr>
                    @if (studentQuiz.Student != null)
                    {
                        <td>@studentQuiz.Student.Name</td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }
                    <td>@studentQuiz.Score</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No students have attempted this quiz yet.</p>
}
